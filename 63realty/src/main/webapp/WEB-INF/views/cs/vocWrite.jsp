<%@ include file="/WEB-INF/views/inc/footer.jsp"%>
<script>
	$(function(){
		MYAPP.Menu.init(5, 4, 0);
	});
	
	function submitAction(){
		var frm = document.writeForm;
		
		if(!$("#termsYes").is(':checked')){
			alert("개인정보수집동의 동의해 주세요.");
			$("#termsYes").focus();
			return;
		}		
		
		if(frm.custTitle.value == ""){
			alert("제목을 입력해 주세요.");
			frm.custTitle.focus();
			return;
		}
		if(frm.bldZone.value == ""){
			alert("빌딩구분을 선택해 주세요.");
			frm.bldZone.focus();
			return;
		}
		
		if(frm.bldDivision.value == ""){
			alert("지역을 선택해 주세요.");
			frm.bldDivision.focus();
			return;
		}
		
		if(frm.bldInfoSeq.value == ""){
			alert("빌딩명을 선택해 주세요.");
			frm.bldInfoSeq.focus();
			return;
		}
		
		if(frm.custName.value == ""){
			alert("성명을 입력해 주세요.");
			frm.custName.focus();
			return;
		}
		
// 		if(frm.custPhone1.value == ""){
// 			alert("연락처를 입력해 주세요.");
// 			frm.custPhone1.focus();
// 			return;
// 		}
// 		if(frm.custPhone2.value == ""){
// 			alert("연락처를 입력해 주세요.");
// 			frm.custPhone2.focus();
// 			return;
// 		}
// 		if(frm.custPhone3.value == ""){
// 			alert("연락처를 입력해 주세요.");
// 			frm.custPhone3.focus();
// 			return;
// 		}
		
		var custPhone = frm.custPhone1.value+frm.custPhone2.value+frm.custPhone3.value;
		
		if(custPhone.length > 4){
			frm.custPhone.value = custPhone;
		}
		
		
		
// 		if(!checkPhoneNum(frm.custPhone.value)){
// 			alert("연락처 형식이 잘 못 되었습니다.");
// 			frm.custPhone1.focus();
// 			return;
// 		}
		
		
		if(frm.custEmail1.value == ""){
			alert("이메일을 입력해 주세요.");
			frm.custEmail1.focus();
			return;
		}
		
		if(frm.custEmail2.value == ""){
			alert("이메일을 입력해 주세요.");
			frm.custEmail2.focus();
			return;
		}
		frm.custEmail.value = frm.custEmail1.value+"@"+frm.custEmail2.value;
		
		if(!checkEmail(frm.custEmail.value)){
			alert("이메일 형식이 잘 못 되었습니다.");
			frm.custEmail1.focus();
			return;
		}
		
		if(frm.contents.value == ""){
			alert("내용을 입력해 주세요.");
			frm.contents.focus();
			return;
		}
		
		if(frm.custPW.value == ""){
			alert("비밀번호를 입력해 주세요.");
			frm.custPW.focus();
			return;
		}
		
		if($("#btnText").text()=="등록중"){
			return;
		}
		$("#btnText").text("등록중");		
		
		frm.action="/cs/voc_writeAction";
		frm.submit();
	}
	
	function EmailMethod() {
		var f = document.writeForm;
		if (f.custEmail3.value == 'D'){		 // 직접입력이면.
			f.custEmail2.value = "";
		}else{
			f.custEmail2.value = f.custEmail3.value;
		}
	}
	
	
</script>
