<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE mapper 
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 

<mapper namespace="comm"> 
	<resultMap id="CommCodeVO" type="kr.co.realty.data.comm.vo.CommCodeVO">
		<result property = "codeSeq"			column="CODE_SEQ"/>
		<result property = "codeName"		column="CODE_NAME"/>
		<result property = "pCodeSeq"		column="P_CODE_SEQ"/>
		<result property = "codeText"		column="CODE_TEXT"/>
		<result property = "isUse"				column="IS_USE"/>
 	</resultMap>
 	
 	<select id="selectListForCommCode" parameterType="CommCodeVO"  resultMap="CommCodeVO">		
		SELECT
			CODE_SEQ
			,CODE_NAME
			,P_CODE_SEQ
			,CODE_TEXT
		FROM
			COMMCODE			 
		WHERE 
			IS_USE='Y'
		AND P_CODE_SEQ = #{pCodeSeq}
		ORDER BY CODE_SEQ
	</select>
	
 	<select id="selectOneForCommCode" parameterType="CommCodeVO"  resultMap="CommCodeVO">		
		SELECT
			CODE_SEQ
			,CODE_NAME
			,P_CODE_SEQ
			,CODE_TEXT
		FROM
			COMMCODE			 
		WHERE 
			IS_USE='Y'
		AND CODE_SEQ = #{codeSeq}
	</select>	
	
</mapper> 


